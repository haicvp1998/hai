import numpy as np
import matplotlib.pyplot as plt

x = np.arange(-5, 5, 0.1)
y = -20*np.exp(-0.2*np.sqrt(0.5*(x**2)))-np.exp(0.5*(np.cos(2*np.pi*x)))+np.exp(1)+20
fig, ax = plt.subplots()
ax.plot(x, y)  
lgnd = ax.legend(['y'], loc='upper center', shadow=True)
lgnd.get_frame().set_facecolor('green')
plt.show()
